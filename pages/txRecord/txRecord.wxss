/* pages/txRecord/txRecord.wxss */
page{
  background-color: #f5f5f5;
}
.list{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
}
.list .time{
  color: #888;
  font-size: 30rpx;
}
.list .price{
  display: flex;
  justify-content: space-between;
  margin: 15rpx 0;
}
.list .price .pprice{
  color: #00B26A;
  font-size: 38rpx;
  padding-right: 8rpx;
}
.list .status{
  width: 100%;
  text-align: right;
}
.list .ing{
  color: #1296DB;
}
.list .success{
  color: #00B26A;
}
.list .fail{
  color: #f50;
}
.list .remark{
  color: #f50;
  margin-top: 15rpx;
}