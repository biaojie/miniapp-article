/* pages/balance/balance.wxss */
page{
  background-color: #f5f5f5;
}
.top{
  background-color: #00B26A;
  color: #FFF;
  padding: 60rpx 0;
}
.top .price{
  width: 100%;
  text-align: center;
}
.top .price .big{
  font-size: 50rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
}
.top .txian{
  width: 100%;
  margin-top: 20rpx;
  text-align: center;
}
.list{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 25rpx;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 2rpx solid #f5f5f5;
}
.list .left-image{
  display:flex;
  align-items:center;
}
.list .left-image image{
  width: 50rpx;
  height: 50rpx;
}
.list .text{
  flex: 1;
  padding-left: 20rpx;
}
.list .right-image{
  display: flex;
  align-items: center;
} 
.list .right-image text{
  padding-right: 20rpx;
}
.list .right-image image{
  width: 30rpx;
  height: 30rpx;
}
.bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.5;
}
.bg-tx{
  width: 100%;
  height: 100%;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
}
.bg-tx .tx{
  margin: auto;
  background-color: #FFF;
  width: 500rpx;
  padding: 50rpx;
  position: relative;
}
.bg-tx .tx .tx-close{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}
.bg-tx .tx .tx-close image{
  width: 100%;
  height: 100%;
}
.bg-tx .tx .tx-input{
  margin-bottom: 50rpx;
}
.bg-tx .tx .tx-input input{
  padding: 20rpx;
  border-bottom: 2rpx solid #DDD;
}
.bg-tx .tx  .tx-btn button{
  background: transparent;
  font-size: 32rpx;
  background-color: #00B26A;
  color: #FFF;
  padding: 15rpx 0;
  margin: 0;
  line-height: normal;
}
.tips{
  width: 100%;
  display: flex;
  align-items: center;
  color: #e0620d;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.tips image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}