
page{
  padding: 20rpx;
  box-sizing: border-box;
}
.info{
  margin-bottom: 30rpx;
}
.info .title{
  font-size: 38rpx;
}
.info .time{
  color: #888;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.distance{
  height: 150rpx;
  width: 100%;
}
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  background-color: #f5f5f5;
  box-sizing: border-box;
}
.bottom .service{
  display: flex;
  width: 50%;
  align-items: center;
  padding: 25rpx 0;
  justify-content: center;
}
.bottom .service image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}
.bottom .left{
  border-right: 2rpx solid #DEDEDE;
}
button::before{
  border: none;
}
button{
  font-size: 32rpx;
  background-color: #00B26A;
  color: #FFF;
  margin-top: 100rpx;
}