/* personalCenter/personalCenter.wxss */
page{
  background-color: #f5f5f5;
}
.userInfo{
  width: 100%;
  display: flex;
  padding: 50rpx 25rpx;
  box-sizing: border-box;
  background-color: #00B26A;
  color: #FFF;
}
.userInfo .userAU{
  width: 30%;
}
.userInfo .userAU .image image{
  width: 140rpx;
  height: 140rpx;
  overflow:hidden; 
  display: block;
  border-radius: 50%;
  background-color: #FFF;
}
.userInfo .userNN{
  width: 70%;
}
.userInfo .userNN .name{
  width: 100%;
  padding-bottom: 20rpx;
}
.userInfo button{
  line-height: normal;
  text-align: left;
  padding: 0;
  margin: 0;
  font-size: 32rpx;
  background-color: transparent;
  color: #FFF;
}
.userInfo button::after{
  border: none;
}

.list{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 25rpx;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 2rpx solid #f5f5f5;
}
.list .left-image{
  display:flex;
  align-items:center;
}
.list .left-image image{
  width: 50rpx;
  height: 50rpx;
}
.list .text{
  flex: 1;
  padding-left: 20rpx;
}
.list .right-image{
  display: flex;
  align-items: center;
} 
.list .right-image text{
  padding-right: 20rpx;
  color: #f50;
}
.list .right-image image{
  width: 30rpx;
  height: 30rpx;
}
.log{
  width: 100%;
  position: absolute;
  bottom: 20px;
  left: 0;
  text-align: center;
}
.log image{
  width: 85rpx;
  height: 85rpx;
}
.log text{
  display: inline-block;
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
  color: #888;
}