page {
  background-color: #f5f5f5;
}
.listall{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.listall .list{
  width: 49%;
  background-color: #FFF;
  border-radius: 10rpx;
  overflow: hidden;
  padding: 15rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
}
.listall .list .list-img{
  width: 100%;
  height: 250rpx;
}
.listall .list .list-img image{
  width: 100%;
  height: 100%;
}
.listall .list .title{
  width: 100%;
  font-size: 34rpx;
  margin: 15rpx 0;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;

}
.listall .list .abstract{
  width: 100%;
  color: #888;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
}
.listall .list .price{
  width: 100%;
  margin-top: 15rpx;
  text-align: right;
  align-items: flex-end;
}
.listall .list .price .free{
  color: #00B26A;
}
.listall .list .price .pay{
  color: #f50;
}